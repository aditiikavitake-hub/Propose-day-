.line {
  opacity: 0;
  margin: 1rem 0;
}
const lines = document.querySelectorAll('.line');

lines.forEach((line, index) => {
  setTimeout(() => {
    line.style.opacity = 1;
    line.style.transition = 'opacity 1s ease, transform 1s ease';
    line.style.transform = 'translateY(0)';
  }, index * 2500);
});
